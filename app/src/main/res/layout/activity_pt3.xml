<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:background="#FFDE80"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="PT"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_marginRight="214dp"
        android:layout_marginEnd="214dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5" />

    <TableLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_below="@+id/imageView5"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5"
        android:id="@+id/tableLayout4">

        <TableRow
            android:padding="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이   름  "
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:padding="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="제    목  "
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView android:id="@+id/lectureName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textColor="#000000" />
        </TableRow>
        <TableRow
            android:padding="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="강의 과목  "
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView android:id="@+id/lectureCate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:padding="3dp"
            android:background="@drawable/border">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/messageTxt"
                    android:layout_width="match_parent"
                    android:layout_height="480dp" />

            </LinearLayout>

        </TableRow>
        <TableRow
            android:padding="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 수 강 료  "
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView android:id="@+id/lectureCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textColor="#000000" />
        </TableRow>
        <TableRow
            android:padding="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 수 강 지 역 "
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView android:id="@+id/lectureArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textColor="#000000" />
        </TableRow>
        <TableRow
            android:padding="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 경력 및 PR "
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView android:id="@+id/teacherPR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textColor="#000000" />
        </TableRow>
        <TableRow
            android:padding="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전화번호 : "
                android:textSize="18dp"
                android:background="@drawable/border"
                android:textStyle="bold" />

            <TextView android:id="@+id/teacherPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/phoneImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smallphones"
                android:onClick="connectPhone"
                />

        </TableRow>
        <TableRow
            android:padding="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SNS : "
                android:textSize="18dp"
                android:background="@drawable/border"
                android:textStyle="bold" />

            <TextView android:id="@+id/teacherSNS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/homepageImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smallhomepage"
                android:onClick="connectSns"
                />
        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/advertise2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1.11"
        android:onClick="advertiseButton2"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bodyx"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>