<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activty_pt2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFDE80"
        android:id="@+id/imageView4"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="PT"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_marginRight="215dp"
        android:layout_marginEnd="215dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tableLayout3"
        android:layout_alignEnd="@+id/tableLayout3" />

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddfef8f8"
        android:id="@+id/tableLayout3"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_span="2"
                android:layout_weight="1"
                android:background="#FFDE80"
                android:gravity="center"
                android:padding="4dp"
                android:text="강의 등록"
                android:textColor="#fff7f7"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="제목"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/titleBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이름"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:padding="3dp">

        </TableRow>

        <TableRow android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전화번호  "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phoneBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="-빼고 입력"
                android:padding="3dp"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:padding="3dp">
            android:background="@drawable/border"

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="강의 과목 "
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="476dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.27"
                    android:background="@drawable/border"
                    android:text="헬스" />

                <RadioButton
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:text="PT" />

                <RadioButton
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:text="식단" />

                <RadioButton
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:text="요가/필라테스" />

                <RadioButton
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.16"
                    android:background="@drawable/border"
                    android:text="기타" />

            </RadioGroup>
        </TableRow>

        <TableRow android:padding="3dp">
            android:background="@drawable/border"

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="내용 "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/messageBox2"
                android:layout_width="wrap_content"
                android:layout_height="440dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:padding="3dp">
            android:background="@drawable/border"

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="지역  "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/areaBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="ex)서울 강동구"
                android:padding="3dp"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:padding="3dp">
            android:background="@drawable/border"

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수강료  "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/moneyBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="자유 기재"
                android:padding="3dp"
                android:textSize="20dp" />
        </TableRow>

        <TableRow android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="경력 및 PR "
                android:textSize="20dp"

                android:textStyle="bold" />

            <EditText
                android:id="@+id/prBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:padding="3dp"
                android:textSize="20dp" />
        </TableRow>
        <TableRow android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SNS  "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/snsBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="FaceBook / Kakao / Instra..."
                android:padding="3dp"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:text="추가"
        android:textSize="20dp"
        android:layout_below="@+id/tableLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="btnCancelButtonClicked"
        android:text="취소"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_toEndOf="@+id/btnAdd"
        android:id="@+id/button2" />
</RelativeLayout>