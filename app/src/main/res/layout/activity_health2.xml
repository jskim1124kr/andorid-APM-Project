<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_health2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:background="#FF8080"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="#000000"
        android:textSize="35dp"
        android:text="헬스"
        android:layout_marginRight="215dp"
        android:layout_marginEnd="215dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddfef8f8"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_span="2"
                android:layout_weight="1"
                android:background="#FF8080"
                android:gravity="center"
                android:padding="4dp"
                android:text="게시글 등록"
                android:textColor="#fff7f7"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="제목"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="카테고리"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="476dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <RadioButton
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.27"
                        android:background="@drawable/border"
                        android:text="헬스" />

                    <RadioButton
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:text="PT" />

                    <RadioButton
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:text="식단" />

                    <RadioButton
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:text="요가/필라테스" />

                    <RadioButton
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.16"
                        android:background="@drawable/border"
                        android:text="기타" />

                </RadioGroup>
            </LinearLayout>


        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="내용"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/message2"
                android:layout_width="wrap_content"
                android:layout_height="640dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:padding="3dp" />

        </TableRow>
        <TableRow
            android:background="@drawable/border"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SNS "
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sns2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="FaceBook / Kakao / Instra..."
                android:padding="3dp" />
        </TableRow>
    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="830dp">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btnCancelButtonClicked"
            android:text="취소" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="작성" />


    </LinearLayout>



</RelativeLayout>