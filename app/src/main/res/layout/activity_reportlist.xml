<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:context="com.example.kjs11.plz.ReportMain"
    android:id="@+id/login_main">

    <LinearLayout
        android:id="@+id/ll_menuLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="16dp"
            android:background="#FFC6FF"
            android:textColor="@color/colorAccent"
            android:text="일지목록"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <TextView
        android:id="@+id/tv_notice"
        android:gravity="center"
        android:layout_below="@+id/ll_menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_below="@+id/tv_notice"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/bt_join"
        android:text="일지 등록"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_menuLayout"
        android:layout_toLeftOf="@+id/bt_delete"
        android:layout_toStartOf="@+id/bt_delete" />



    <Button
        android:id="@+id/bt_delete"
        android:text="일지 삭제"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_menuLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>



